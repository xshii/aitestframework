{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/libs"
            },
            "justMyCode": true
        },
        {
            "name": "Python: 当前文件(详细)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/libs"
            },
            "justMyCode": false
        },
        {
            "name": "Pytest: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-v", "-s"],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/libs"
            },
            "justMyCode": true
        },
        {
            "name": "Pytest: 所有单元测试",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["aitestframework/", "-v"],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/libs"
            },
            "justMyCode": true
        },
        {
            "name": "Pytest: 集成测试",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/it", "tests/st", "-v"],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/libs"
            },
            "justMyCode": true
        },
        {
            "name": "Demo: 01_basic_ops",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/demos/01_basic_ops/run.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/libs"
            },
            "justMyCode": true
        },
        {
            "name": "Demo: 02_mini_transformer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/demos/02_mini_transformer/run.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/libs"
            },
            "justMyCode": true
        },
        {
            "name": "CLI: aitest",
            "type": "debugpy",
            "request": "launch",
            "module": "aitestframework.cli",
            "args": ["--help"],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/libs"
            },
            "justMyCode": true
        }
    ]
}
