{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake -B build/func_sim -S stubs -DHOOK_PLATFORM=func_sim && cmake --build build/func_sim",
            "group": {"kind": "build", "isDefault": true},
            "problemMatcher": "$gcc"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "ctest --test-dir build/func_sim --output-on-failure",
            "group": {"kind": "test", "isDefault": true},
            "dependsOn": "build",
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "build/func_sim/stub_runner",
            "dependsOn": "build",
            "problemMatcher": []
        }
    ]
}
